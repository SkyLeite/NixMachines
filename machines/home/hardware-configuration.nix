    # 71a653f5-bb05-46b1-bbe4-950652b44cf7
    device = "/dev/disk/by-uuid/71a653f5-bb05-46b1-bbe4-950652b44cf7";
    fsType = "ext4";
  };

  fileSystems."/boot" = {
    # D209-1E91
